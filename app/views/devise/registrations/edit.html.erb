<div id="form">
  <div class="row">
    <div class="medium-spacer-top">
      <h2>Edit Your Account</h2>
    </div>

    <div class="small-11 medium-9 small-centered columns" id="account-tabs-navigation">
      <ul class="tabs" data-tab>
        <li class="tab-title active"><%= link_to "Your Account Type", "#account-type" %></li>
        <li class="tab-title"><%= link_to "Edit Email", "#email" %></li>
        <li class="tab-title"><%= link_to "Edit Password", "#password" %></li>
        <li class="tab-title"><%= link_to "Cancel Account", "#cancel-account" %></li>
        
      </ul>
    </div>

    <div class="tabs-content">
      <!-- Email Tab Content -->
      <div class="content" id="email">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="small-11 medium-8 small-centered columns">
          <%= devise_error_messages! %>

          <div class="small-spacer">
            <%= f.email_field :email, placeholder: "Email" %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.password_field :current_password, autocomplete: "off", placeholder: "Password (required to confirm your changes)" %>
          </div>

          <%= f.submit "Update My Account", class: "button expand notice" %>
        </div>

        <% end %>
      </div>

      <!-- Password Tab Content -->
      <div class="content" id="password">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="small-11 medium-8 small-centered columns">
          <%= devise_error_messages! %>

          <div class="medium-spacer-top small-spacer">
            <%= f.password_field :password, placeholder: "Enter your new password" %>
            <%= f.password_field :password_confirmation, placeholder: "Confirm your new password" %>

            <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current Password (required to confirm your changes)" %>
          </div>

          <%= f.submit "Update My Account", class: "button expand notice" %>
        </div>

        <% end %>
          
      </div>

      <!-- Cancel Account Tab Content -->
      <div class="content" id="cancel-account">
        <div class="small-11 medium-6 small-centered columns">
          <div class="medium-spacer-top">
            <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button expand alert" %>
          </div>
        </div>
      </div>

      <!-- Account Type -->
      <div class="content active" id="account-type">
        <div class="small-11 medium-6 small-centered columns">
          <div class="medium-spacer-top">
            <p>You are an admin user with the priviledge to edit all memories. Thank you for helping update and keep these memories of Brig free from grammar and spelling mistakes.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

  