<div id="form">
	<div class="row">
		<div class="medium-spacer-top">
			<h2>Sign Up</h2>
		</div>

		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			<div class="small-11 medium-8 small-centered columns">
				<%= devise_error_messages! %>

				<%= f.text_field :email, autofocus: true, placeholder: "Email" %>

				<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>

				<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password" %>

				<%= f.submit "Sign Up", class: "button expand" %>
			</div>
		  
		<% end %>

		<div class="medium-spacer-bottom">
			<%= render "devise/shared/links" %>
		</div>
	
	</div>
</div>

		